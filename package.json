{
  "name": "peak-landing-page",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run clean && next dev",
    "dev:quick": "next dev",
    "dev:safe": "rm -rf .next && next dev",
    "dev:watch": "./scripts/dev-recovery.sh",
    "dev:stable": "npm run cache:validate && npm run dev:quick",
    "build": "npm run clean && next build",
    "start": "next start",
    "lint": "eslint",
    "clean": "rm -rf .next",
    "clean:cache": "rm -rf .next/cache",
    "clean:all": "rm -rf .next node_modules package-lock.json && npm install",
    "fix": "npm run clean && npm run dev",
    "cache:validate": "node scripts/validate-cache.js",
    "recover": "pkill -f 'next dev' 2>/dev/null || true && npm run clean && npm run dev:quick"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
